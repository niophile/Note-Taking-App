<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Notes Page</title>
  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>
<body class="bg-gray-900 min-h-screen flex items-center justify-center p-6">
  <div class="w-full max-w-2xl bg-white shadow-lg rounded-2xl p-6">

    <!-- Form -->
    <div class="mb-6">
      <h1 class="text-2xl font-bold text-gray-800 mb-4">Take a Note</h1>

      <!-- Proper POST form -->
      <form action="/create" method="POST">
        <div class="mb-3">
          <input id="title" type="text" placeholder="Enter title" name="title"
            class="w-full border border-gray-300 rounded-lg p-2 focus:outline-none focus:ring-2 focus:ring-indigo-500" required />
        </div>
        <div class="mb-3">
          <textarea id="description" placeholder="Enter description" name="description"
            class="w-full border border-gray-300 rounded-lg p-2 focus:outline-none focus:ring-2 focus:ring-indigo-500" required></textarea>
        </div>
        <button type="submit"
          class="bg-indigo-600 text-white px-4 py-2 rounded-lg hover:bg-indigo-700 transition">
          Create Note
        </button>
      </form>
    </div>

    <!-- Notes Section -->
    <div>
      <h2 class="text-xl font-semibold text-gray-700 mb-3">Your Notes</h2>

      <% if (Array.isArray(files) && files.length > 0) { %>
        <div id="notesContainer" class="space-y-4 max-h-80 overflow-y-auto p-2 border rounded-lg bg-gray-50">
          <% files.forEach(function(file) { %>
            <div class="p-4 border rounded-xl shadow-sm bg-white">
              <h3 class="text-lg font-bold text-gray-800"><%= file.title %></h3>
              <p class="text-gray-600 mt-1"><%= file.description %></p>
              <% if(file.url) { %>
                <a href="/note/<%= file.title %>" class="text-blue-500 underline">Read More</a>
                <a href="/edit/<%= file.title %>" class="text-blue-500 underline">Edit</a>

              <% } %>
            </div>
          <% }) %>
        </div>
      <% } else { %>
        <p class="text-gray-500">No files found.</p>
      <% } %>
    </div>
  </div>
</body>
</html>
